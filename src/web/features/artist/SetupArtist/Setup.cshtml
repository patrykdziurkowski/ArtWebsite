@model SetupModel

<form asp-action="Setup" method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Summary" class="form-label">Summary</label>
        <textarea class="form-control" id="Summary" name="Summary" asp-for="Summary"></textarea>
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>

    <button id="setup-artist" type="submit" class="btn btn-primary">Submit</button>
</form>