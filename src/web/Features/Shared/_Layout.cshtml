@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    string? csrfToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>
    <div class="d-flex flex-column">
        <header class="bg-body">
            <div class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow">
                <div class="container-fluid d-flex align-items-center">
                    <div class="d-flex align-items-center" style="flex: 1;">
                        <button class="btn btn-primary d-md-none position-fixed" id="toggleSidebar">☰</button>
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">web</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <partial name="../Authentication/_LoginPartial" />
                    </div>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div style="flex: 1;" class="d-flex justify-content-center">
                            <partial name="../Search/_SearchBarPartial" />
                        </div>
                    }

                    <div style="flex: 1;" class="d-flex justify-content-end m-2">
                        <partial name="../Shared/_DarkModeSwitchPartial"/>
                    </div>
                </div>
            </div>
        </header>

        <div class="container">
            <div class="row" style="min-height: calc(100vh - 56px);">
                <div class="col-lg-3 bg-body-secondary sidebar-fixed">
                    <nav class="d-flex flex-column justify-content-between p-3" id="sidebar">
                        <ul class="nav nav-pills flex-column">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Browse" asp-action="Index" class="nav-link">Browse</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Reviewer" asp-action="Index" class="nav-link">Reviewer</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Artist" asp-action="Index" class="nav-link">Artist</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Leaderboard" asp-action="Index" class="nav-link">Leaderboard</a>
                                </li>
                            }
                        </ul>
                        <div class="border-top text-muted">&copy; 2026</div>
                    </nav>
                </div>

                <main role="main" class="py-4 col-lg-9 col-xl-6">
                    @RenderBody()
                </main>

                <div class="col-3 bg-body-secondary sidebar-fixed">
                    <div class="p-3"></div>
                </div>
            </div>
        </div>
    </div>

    <partial name="../UserDetails/_UserDetailsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const originalFetch = window.fetch;
            window.fetch = (url, options = {}) => {
                return originalFetch(url, {
                    ...options,
                    headers: {
                        ...options.headers,
                        'X-CSRF-TOKEN': '@csrfToken'
                    }
                });
            };
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector("#toggleSidebar").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("show");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>