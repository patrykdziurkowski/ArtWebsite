@using web.Features.Reviewers
@using web.Features.Reviewers.Index
@model ReviewerProfileDto

<div class="container mt-4">
    <div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-4">
        <div class="d-flex align-items-start gap-3">
            <img id="reviewer-profile-picture" 
                 src="@Model.ProfilePicturePath" 
                 alt="This reviewer's profile picture." 
                 class="rounded-circle border border-3 border-primary" 
                 style="width: 100px; height: 100px; object-fit: cover;" />
            <div class="flex-grow-1">
                <div class="d-flex align-items-center gap-3 mb-2">
                    <div>
                        <h2 class="mb-0">
                            <span id="reviewerName" data-user-id="@Model.ReviewerUserId">@Model.Name</span>'s profile
                        </h2>
                        <span class="badge rounded-pill mt-2 fs-6" style="background-color: var(--bs-primary);">
                            <i class="bi bi-star-fill"></i> @Model.Points Points
                        </span>
                    </div>
                    @if (@Model.CurrentUserOwnsThisProfile || @Model.IsCurrentUserAdmin)
                    {
                        <button id="editProfileModalButton" 
                                class="btn btn-outline-secondary border-0"
                                data-bs-toggle="modal" 
                                data-bs-target="#editProfileModal">
                            <i id="editProfile" class="bi bi-pencil-square"></i>
                        </button>
                    }
                </div>
                <p class="text-muted mb-0">
                    Joined: <span id="reviewerJoinDate">@Html.Raw(Model.JoinDate.ToString("o"))</span> | @Model.ReviewCount total reviews
                </p>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <ul class="nav nav-tabs" id="reviewerTabs">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#reviewsTab">Reviews</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#likesTab">Likes</button>
            </li>
        </ul>

        <div class="tab-content mt-3">
            <partial name="Index/_ReviewerReviewsPartial" />
            <partial name="Index/_ReviewerLikesPartial" />
        </div>
    </div>
</div>

<partial name="../ArtPieces/_ArtPieceDetailsModalPartial" />

<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="editProfileModalLabel">Edit your reviewer profile!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-4 py-4">
                <form id="editForm">
                    <div class="mb-4">
                        <label for="Name" class="form-label fw-semibold">Reviewer Name</label>
                        <input type="text" 
                               class="form-control form-control-lg" 
                               value="@Model.Name" 
                               name="Name" 
                               placeholder="Your reviewer name">
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label for="image-input" class="form-label fw-semibold">Profile Picture</label>
                        <input type="file" 
                               class="form-control" 
                               id="image-input" 
                               name="Image" 
                               accept="image/*" />
                        <small class="form-text text-muted">Optional - Choose a new profile picture</small>
                    </div>
                    <input type="hidden" value="@Model.Id" name="ReviewerId">
                </form>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button id="editReviewerProfile" type="submit" class="btn btn-primary px-4">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            document.querySelector('#editReviewerProfile').addEventListener('click', async (e) => {
                const shouldRedirectToNewPage = window.location.pathname !== "/reviewer"
                    && window.location.pathname !== "/reviewer/";
                const form = new FormData(document.querySelector('#editForm'));

                const response = await fetch(`/api/reviewers/${form.get('ReviewerId')}`, {
                    method: 'PUT',
                    body: form,
                });

                if (response.status !== 200) {
                    const data = await response.json();

                    const validationErrorsText = document.querySelector('#editForm *[name="name"] + span');
                    validationErrorsText.innerText = data.errors.Name;

                    return;
                }

                document.querySelector('#reviewerName').innerText = form.get('Name');
                document.querySelector('#editProfileModal .btn-close').click();
                if (shouldRedirectToNewPage) window.location.href = `/reviewers/${form.get('Name')}`;
            });

            document.querySelector('#reviewerJoinDate').innerText = new Date(
                '@Html.Raw(Model.JoinDate.ToString("o"))').toLocaleString();

            let artPieceDetails = null;
            for (const container of document.querySelectorAll('#likesList, #reviewsList')) {
                container.addEventListener('click', (e) => {
                    const element = e.target;
                    const artPieceElement = element.closest('.art-piece-card');
                    if (!artPieceElement) return;

                    const artPieceId = artPieceElement.dataset.artPieceId;
                    if (!artPieceId) {
                        throw new Error('Expected art piece id not to be null for clicked review/like element.');
                    }

                    const artPieceDetails = new ArtPieceDetails(artPieceId);
                    artPieceDetails.show();
                });
            }

            document.getElementById('reviewerName').addEventListener('click', (e) => {
                const el = e.currentTarget;
                userDetails.show(
                    el,
                    el.dataset.userId,
                    el.textContent,
                    false);
            });
        });
    </script>
}